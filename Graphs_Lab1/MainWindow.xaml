<Window x:Class="Graphs_Lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graphs_Lab1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Canvas x:Name="graph" Background="Transparent" MouseUp="graph_MouseUp" Margin="-5,0,127,0"/>
        <Button x:Name="button" Content="Start algorithm
                " Margin="0,0,10,62" Click="button_Click" HorizontalAlignment="Right" Width="86" Height="27" VerticalAlignment="Bottom"/>
        <Button x:Name="original_state" Content="Original state" Margin="0,0,10,22" Click="button1_Click" HorizontalAlignment="Right" Width="86" Height="27" VerticalAlignment="Bottom"/>
        <GridSplitter x:Name="gridSplitter" Margin="0,6,117,10" Width="5"/>
        <ComboBox x:Name="comboBox" Margin="0,33,5,0" SelectionChanged="comboBox_SelectionChanged" Initialized="comboBox_Initialized" HorizontalAlignment="Right" Width="107" Height="22" VerticalAlignment="Top"/>
    </Grid>
</Window>
